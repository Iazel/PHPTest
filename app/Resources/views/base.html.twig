<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}" type="text/css" media="screen" charset="utf-8">
        <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}" type="text/css" media="screen" charset="utf-8">
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
      <div class="container">
        <h1 class="page-header">{% block page_title %}{% endblock %}</h1>

        {% if app.session %}
        {% for type, messages in app.session.flashbag.all('error') %}
          {% for msg in messages %}
          <div class="alert alert-{{ type }}">{{ msg }}</div>
          {% endfor %}
        {% endfor %}
        {% endif %}

        {% block body %}{% endblock %}
      </div>
      {% block javascripts %}{% endblock %}
    </body>
</html>
